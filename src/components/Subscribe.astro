---
import "../styles/Subscribe.scss";
const IMAGE_BASE_URL =
  "https://res.cloudinary.com/ddi3hd3cx/image/upload/w_500/lionpark-swipers";
const IMAGE_BASE_URL_LOW =
  "https://res.cloudinary.com/ddi3hd3cx/image/upload/w_100/lionpark-swipers";
---

<secion class="subscribe" id="sub">
  <div class="container subscribe__container">
    <div class="subscribe__left">
      <h2 class="heading-second subscribe__title">
        Subscribe for Latest News & More
      </h2>
      <p class="paragraph subscribe__p">
        Stay connected with all things lion-related at our zoo. Subscribe to
        receive the latest news on feeding times, special discounts, and more.
        Be the first to know when our majestic lions roar and when fantastic
        savings come your way. Subscribe now for an adventure like no other.
      </p>
      <form action="">
        <input
          class="input"
          type="email"
          name=""
          id="email"
          placeholder="Your Email..."
          required
        />

        <button type="submit" class="cta">Subscribe</button>
      </form>
    </div>
    <div class="subscribe__right">
      <img
        class="lazy"
        data-src={`${IMAGE_BASE_URL}/swiper_3.jpg`}
        src={`${IMAGE_BASE_URL_LOW}/swiper_3.jpg`}
        alt="lionet from our lion zoo"
      />
    </div>
  </div>
</secion>
