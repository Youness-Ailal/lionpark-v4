---
import logo from "/logo-footer.svg?url";
import { Icon } from "astro-icon/components";
import "@/styles/Footer.scss";
import { IMAGE_BASE_URL } from "@/lib/contants.js";
const year = new Date().getFullYear();
---

<footer class="footer">
  <div class="container footer__container">
    <div class="footer__logos">
      <img class="footer__logo" src={logo} alt="lion zoo logo" />
      <div class="footer__socials">
        <a target="_blank" href="https://facebook.com/"
          ><Icon class="icon footer__social" name="mdi:facebook" /></a
        >
        <a target="_blank" href="https://www.instagram.com/"
          ><Icon class="icon footer__social" name="mdi:instagram" /></a
        >
        <a target="_blank" href="https://www.youtube.com/"
          ><Icon class="icon footer__social" name="mdi:youtube" /></a
        >
        <a target="_blank" href="https://www.linkedin.com/in/youness-ailal/"
          ><Icon class="icon footer__social" name="mdi:linkedin" /></a
        >
      </div>
    </div>
    <div class="footer__links">
      <p class="footer__title">Liens</p>
      <a href="/fr" class="link footer__link">Accueil</a>
      <a href="/fr/Gallery" class="link footer__link">Album</a>
      <a href="/fr/Contact" class="link footer__link">Contact</a>
      <a href="/fr/Tickets" class="link footer__link">Billets</a>
      <a href="/fr/Animals" class="link footer__link">Animaux</a>
    </div>

    <div class="footer__contact">
      <p class="footer__title">contact</p>
      <a href="tel:+212624360624" class="link footer__link"
        ><Icon class="icon footer__icon" name="carbon:phone" />+212 624360624</a
      >
      <a href="mailto:itsyounessaylal@gmail.com" class="link footer__link">
        <Icon
          class="icon footer__icon"
          name="mdi:email-outline"
        />itsyounessaylal@gmail.com</a
      >
      <a class="link footer__link" href="/fr"
        ><Icon class="icon footer__icon" name="carbon:location" />Rue Drarga 1,
        Agadir</a
      >
    </div>

    <div class="footer__photos">
      <p class="footer__title">Derni√®res photos</p>
      <div class="footer__gallery">
        <img
          src={`${IMAGE_BASE_URL}/swiper_2.jpg`}
          alt="a lion from lion park Agadir"
        />
        <img
          src={`${IMAGE_BASE_URL}/swiper_6.jpg`}
          alt="a lion from lion park Agadir"
        />
        <img
          src={`${IMAGE_BASE_URL}/swiper_4.jpg`}
          alt="a lion from lion park Agadir"
        />
        <img
          src={`${IMAGE_BASE_URL}/swiper_5.jpg`}
          alt="a lion from lion park Agadir"
        />
      </div>
    </div>
  </div>
  <div class="footer__bottom">
    <p>
      &copy; {year} Made by <a
        target="_blank"
        href="https://www.linkedin.com/in/youness-ailal/">@Youness Ailal</a
      >
    </p>
  </div>
</footer>
