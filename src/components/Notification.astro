<div class="notification hidden">
  <p>
    This is <strong>NOT</strong> the official website of lion park Agadir, it's a
    personal portfolio project.
  </p>

  <button class="close_notification">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="1em"
      height="1em"
      viewBox="0 0 32 32">
      <path
        fill="currentColor"
        d="M16 2C8.2 2 2 8.2 2 16s6.2 14 14 14s14-6.2 14-14S23.8 2 16 2m0 26C9.4 28 4 22.6 4 16S9.4 4 16 4s12 5.4 12 12s-5.4 12-12 12"
      ></path>
      <path
        fill="currentColor"
        d="M21.4 23L16 17.6L10.6 23L9 21.4l5.4-5.4L9 10.6L10.6 9l5.4 5.4L21.4 9l1.6 1.6l-5.4 5.4l5.4 5.4z"
      ></path>
    </svg>
  </button>
</div>
<script>
  const mustHide = localStorage.getItem("notihidden");
  const hideNotification = () => {
    document.querySelector(".notification").classList.add("hidden");
  };
  if (mustHide !== "true") {
    document.querySelector(".notification").classList.remove("hidden");
  }
  document
    .querySelector(".close_notification")
    ?.addEventListener("click", () => {
      hideNotification();
      localStorage.setItem("notihidden", "true");
    });
</script>

<style lang="scss">
  .notification {
    font-size: 1.4rem;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1.4rem 2rem;
    background-color: rgb(0, 128, 0, 0.1);
    button {
      color: #111;
      svg {
        scale: 2;
      }
    }
  }
  .notification.hidden {
    display: none;
  }
</style>
